@using MudBlazor
<MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="25">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Menu</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Dashboard</MudNavLink>
        <MudNavLink Href="/transactions" Icon="@Icons.Material.Filled.List">Transactions</MudNavLink>
        <MudNavLink Href="/add-income" Icon="@Icons.Material.Filled.AttachMoney">Add Income</MudNavLink>
        <MudNavLink Href="/add-expense" Icon="@Icons.Material.Filled.MoneyOff">Add Expense</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool _drawerOpen = true;
}